Enter a username and password to Sign Up...
<%= form_for(@user) do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br>
  <%= f.label :email_address %><br>
  <%= f.text_field :email_address %><br><br>
  <%= f.submit 'Sign Up', class: "btn btn-primary btn-sm" %>
<% end %>
